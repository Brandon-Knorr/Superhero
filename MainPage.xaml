<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Superhero.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                />

            <VerticalStackLayout Padding="20">
                <Label x:Name="QuestionLabel" FontSize="24" Text="Your question here" />
                <Image x:Name="QuestionImage" HeightRequest="200" />
                <Button x:Name="TrueButton" Text="True" Clicked="ButtonClicked"/>
                <Button x:Name="FalseButton" Text="False" Clicked="ButtonClicked" />
                <Label x:Name="ResultLabel"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
