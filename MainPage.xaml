<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Superhero.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label x:Name="QuestionLabel"
          FontSize="18"
          HorizontalOptions="Center" />

            <!-- Question image (shows during quiz) -->
            <Image x:Name="QuestionImage"
          HeightRequest="240"
          Aspect="AspectFit"
          IsVisible="False"
          HorizontalOptions="Center" />

            <!-- Result image (hidden while quizzing, shown at end) -->
            <Image x:Name="ResultImage"
          HeightRequest="240"
          Aspect="AspectFit"
          IsVisible="False"
          HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
                <Button x:Name="TrueButton" Text="True" Clicked="ButtonClicked" />
                <Button x:Name="FalseButton" Text="False" Clicked="ButtonClicked" />
            </HorizontalStackLayout>

            <Label x:Name="ResultLabel"
          FontSize="16"
          HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
